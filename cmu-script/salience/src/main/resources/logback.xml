<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <root level="info">
        <appender-ref ref="STDOUT"/>
    </root>

    <logger name="illinois.cs.cogcomp" level="INFO"/>
    <logger name="edu.illinois.cs.cogcomp" level="INFO"/>
    <logger name="edu.cmu.cs.lti.annotators" level="WARN"/>

</configuration>
